<%-include("header")-%>
<div class="text-center center-div" id="login">
  <div class="container w-25 border py-5">
    <div class="title pb-5">
      <h2 class="font-weight-bpld" style="color: white">Login System</h2>
      <span style="color: white">
        <%if(locals.logout){%> <%=logout%> <% } %>
      </span>
    </div>
    <form action="/login" method="POST" class="pt-3">
      <div class="form-group">
        <input
          type="email"
          class="form-control"
          placeholder="email"
          name="email"
        />
        <small style="color: white">Register Email address</small>
      </div>
      <div class="form-group">
        <input
          type="password"
          class="form-control"
          name="password"
          placeholder="password"
        />
      </div>
      <button type="submit" class="btn btn-success rounded-pill">Submit</button>
    </form>
  </div>
</div>

<%-include("footer")-%>
